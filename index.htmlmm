            font-size: 2.2rem;
            color: #34495e;
            text-align: center;
            margin-bottom: 40px;
        }
        .tool-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 30px;
        }
        .tool-card {
            background: #f9f9f9;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            transition: transform 0.3s ease;
            position: relative;
        }
        .tool-card:hover {
            transform: translateY(-10px);
        }
        .card-link {
            text-decoration: none;
            color: inherit;
            display: block;
            height: 100%;
        }
        .card-link:hover {
            text-decoration: none;
        }
        .tool-card img {
            width: 60px;
            height: 60px;
            margin-bottom: 15px;
        }
        .tool-card h3 {
            font-size: 1.5rem;
            color: #2c3e50;
            margin-bottom: 10px;
        }
        .tool-card p {
            font-size: 1rem;
            color: #7f8c8d;
        }
        .try-now {
            display: inline-block;
            margin-top: 15px;
            padding: 8px 20px;
            background: #3498db;
            color: #fff;
            border-radius: 20px;
            font-weight: 500;
            transition: background 0.3s ease;
        }
        .card-link:hover .try-now {
            background: #2980b9;
        }
        footer {
            background: #2c3e50;
            color: #ecf0f1;
            padding: 20px 0;
            text-align: center;
        }
        footer p {
            font-size: 0.9rem;
        }
        footer a {
            color: #2ecc71;
            text-decoration: none;
        }
        footer a:hover {
            text-decoration: underline;
        }
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        @media (max-width: 768px) {
            header h1 {
                font-size: 2rem;
            }
            header p {
                font-size: 1rem;
            }
            .tools-section h2 {
                font-size: 1.8rem;
            }
            .tool-grid {
                grid-template-columns: 1fr;
            }
        }
        @media (max-width: 480px) {
            header {
